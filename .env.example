# Docker Compose 환경 변수 예시
# 이 파일을 .env로 복사하여 사용하세요: cp .env.example .env

# Spring 프로파일
SPRING_PROFILES_ACTIVE=dev

# MariaDB 설정
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=customer_db
MYSQL_USER=customer_user
MYSQL_PASSWORD=customer_password

# Redis 설정
REDIS_PASSWORD=redis_password

# JWT 설정
JWT_SECRET=your-secret-key-here-please-change-in-production
JWT_ACCESS_TOKEN_EXPIRATION=3600000    # 1시간 (밀리초)
JWT_REFRESH_TOKEN_EXPIRATION=86400000  # 24시간 (밀리초)

# 로깅 설정
LOGGING_LEVEL=INFO
LOGGING_LEVEL_APP=DEBUG
JPA_SHOW_SQL=false